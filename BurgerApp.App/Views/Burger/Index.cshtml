@model List<BurgerListViewModel>
@{
    ViewData["Title"] = "Menu";
}

<div class="container">
    <div class="p-3">
        <a asp-action="Create" class="btn btn-success">Create a new burger</a>
    </div>
    <div class="row">
        @foreach(var burger in Model)
        {
            <partial name="~/Views/Shared/Partials/_BurgerMenuCard.cshtml" for="@burger" />
        }
    </div>
</div>
