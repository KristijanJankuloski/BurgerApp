@model UserDetailsViewModel
@{
    ViewData["Title"] = "User Details";
}

<div class="container">
    <h2 class="display-3">Welcome</h2>
    <h3 class="display-4">@Model.FirstName @Model.LastName</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>From location</th>
                <th>Number of items</th>
                <th>Payment</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var order in Model.Orders)
            {
                <tr>
                    <td>@order.OrderDate</td>
                    <td>@order.LocationName</td>
                    <td>@order.NumberOfItems</td>
                    <td>@order.PaymentMethod</td>
                    <td>@order.Status</td>
                    <td>
                        <a asp-controller="Order" asp-action="Details" class="btn btn-sm btn-primary">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>